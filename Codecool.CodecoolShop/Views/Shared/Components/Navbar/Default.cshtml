@model Codecool.CodecoolShop.Models.NavbarModel
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index"><img src="~/img/shop_logo.PNG"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1 navbar-category">
                    <li class="nav-item">
                        <a class="nav-link h6 blue" style="color: #4C98CB; padding=20px" asp-area="" asp-controller="Product" asp-action="Index">HOME</a>
                    </li>
                    @*<li class="nav-item">
            <a class="nav-link text-dark h6 blue" asp-area="" asp-controller="Product" asp-action="Privacy">Privacy</a>
        </li>*@
                    @foreach (var category in @Model.Categories)
                    {
                        <li class="nav-item">
                            <a class="nav-link h6 blue" style="color: #4C98CB; padding=20px" asp-area="" asp-controller="Product"
                               asp-action="Category" asp-route-id="@category.Id">@category.Name.ToUpper()</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="cart-container">
                <a class="cart" asp-area="" asp-controller="Cart" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-cart3" viewBox="0 0 16 16" style="color: #DB3F41">
                        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </svg>
                </a>
            </div>
            <h6 style="margin-left: 3px; margin-top: 10px; color: #DB3F41" class="quantity">@Model.ItemsInCart</h6>
        </div>
    </nav>
</header>